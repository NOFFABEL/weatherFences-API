{
    "name": "WeatherFences",
    "description": "A small restfull api build with Slim framework 3.",
    "keywords": ["weather", "rest", "api", "restfull"],
    "license": "MIT",
    "authors": [
        {
            "name": "Fabrice NOLACK FOTE",
            "email": "noffabel12@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0",
        "vlucas/phpdotenv": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:80 -t public",
        "test": "phpunit"
    }
}
